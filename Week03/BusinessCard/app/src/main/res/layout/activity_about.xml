<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AboutActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImg"
        android:layout_width="@dimen/profile_img_width"
        android:layout_height="@dimen/profile_img_height"
        android:src="@drawable/img_amzesmoro"
        app:civ_border_color="@android:color/black"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/profileCv"
        android:layout_width="@dimen/card_view_profile"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vertical_profile"
        app:cardCornerRadius="@dimen/card_view_radius"
        app:cardBackgroundColor="@color/lightPureGray">

        <TextView
            android:id="@+id/profileTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:text="@string/about_me"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_profile" />

    </androidx.cardview.widget.CardView>

</LinearLayout>