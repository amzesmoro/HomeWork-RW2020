<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/movieNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="2"
        tools:text="Marlina the Murderer in Four Acts"/>


    <TextView
        android:id="@+id/movieRatingTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/movieNameTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="71%"/>

    <TextView
        android:id="@+id/relaseDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release Date"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movieNameTv"/>


    <TextView
        android:id="@+id/genreTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/relaseDateTv"
        app:layout_constraintTop_toBottomOf="@id/movieRatingTv"/>


    <TextView
        android:id="@+id/movieRelaseDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="May 15, 2017"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relaseDateTv"/>


    <TextView
        android:id="@+id/movieGenreTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Thriller, Drama, Western"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/movieRelaseDateTv"
        app:layout_constraintTop_toBottomOf="@id/genreTv"/>

    <TextView
        android:id="@+id/durationTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movieRelaseDateTv"/>


    <TextView
        android:id="@+id/originalLanguageTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Original Language"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/durationTv"
        app:layout_constraintTop_toBottomOf="@id/movieGenreTv"/>


    <TextView
        android:id="@+id/movieDurationTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1h 33m"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/durationTv"/>


    <TextView
        android:id="@+id/movieOriginalLanguageTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Indonesian"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/movieDurationTv"
        app:layout_constraintTop_toBottomOf="@id/originalLanguageTv"/>

    <TextView
        android:id="@+id/descriptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movieDurationTv"/>

    <TextView
        android:id="@+id/movieDescriptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="In the deserted hills of an Indonesian island, Marlina, a young widow, is attacked, raped and robbed for her cattle. To defend herself, she kills several men of the gang. Seeking justice, she goes on a journey for empowerment and redemption. But the road is long, especially when the ghost of her headless victim begins to haunt her."
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptionTv"/>



</androidx.constraintlayout.widget.ConstraintLayout>